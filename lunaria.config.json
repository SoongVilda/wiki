{
  "$schema": "./node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "CachyOS/wiki",
    "branch": "next"
  },
  "files": [
    {
      "location": "src/content/docs/**/*.{md,mdx}",
      "pattern": "src/content/docs/@lang/@path",
      "type": "universal"
    }
  ],
  "dashboard": {
    "title": "CachyOS Wiki Localization Status",
    "description": "Localization status dashboard for the CachyOS Wiki.",
    "basesToHide": ["src/content/docs/"],
    "favicon": {
      "external": [
        {
          "link": "https://wiki.cachyos.org/favicon.svg",
          "type": "image/svg+xml"
        }
      ]
    }
  },
  "defaultLocale": {
    "label": "English",
    "lang": "en"
  },
  "locales": [
    {
      "label": "Čeština",
      "lang": "cs"
    },
    {
      "label": "Deutsch",
      "lang": "de"
    },
    {
      "label": "Indonesian",
      "lang": "id"
    },
    {
      "label": "Polski",
      "lang": "pl"
    },
    {
      "label": "Русский",
      "lang": "ru"
    },
    {
      "label": "Slovensky",
      "lang": "sk"
    }
  ]
}
