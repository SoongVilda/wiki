---
import SingleImageComponent from './image-component';
import getImgPath from './images';
import type { ImageObject } from './images';

interface Props {
  imgsrc: string | ImageObject | Promise<{ default: ImageObject }>;
}

const { imgsrc } = Astro.props;

const convertedImg = await getImgPath(imgsrc);
---

<SingleImageComponent client:visible imgsrc={convertedImg} />
